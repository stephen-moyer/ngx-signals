{
  "name": "ngx-signals",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/ngx-signals/src",
  "prefix": "ngx-signals",
  "tags": ["scope:npm"],
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "libs/ngx-signals/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/ngx-signals/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/ngx-signals/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/ngx-signals/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    }
  }
}
